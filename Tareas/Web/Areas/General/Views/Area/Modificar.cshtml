@model Info.Area_Info

@{
    ViewBag.Title = "Modificar";
    //if (Session["IdUsuario"] == null )
    //{
    //    Response.Redirect("~/Account/Login");
    //}
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Modificar", "Area", FormMethod.Post, new { @class = "from", @role = "form" }))
{
    @Html.HiddenFor(v => v.IdArea);
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="IdUsuario"> Descripción*</label>
                    @Html.TextBoxFor(v => v.Descripcion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(v => v.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="box-footer">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a class="btn btn-default" href="@Url.Action("Index","Area",new { Area = "General" },null)">Cancelar</a>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}

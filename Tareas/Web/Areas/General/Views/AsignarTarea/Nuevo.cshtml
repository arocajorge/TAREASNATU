@model Info.Tarea_Info

@{

    if (ViewBag.mensaje != null)
    {

        <div class="alert alert-warning alert-dismissible">
            <h4>
                <i class="icon fa fa-warning"></i> @ViewBag.mensaje
            </h4>
        </div>

    }
    ViewBag.Title = "Asignar tarea";
    if (Session["IdUsuario"] == null)
    {
        Response.Redirect("~/Account/Login");
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/ValidacionBotonSubmit.js"></script>

@using (Html.BeginForm("Nuevo", "AsignarTarea", FormMethod.Post, new { @class = "form", @role = "form" }))
{

    @Html.HiddenFor(v => v.IdTransaccionSession, new { @id = "IdTransaccionSession" });
    @Html.HiddenFor(v => v.IdTarea, new { @id = "IdTarea" });
    @Html.HiddenFor(v => v.FechaInicio);
    @Html.HiddenFor(v => v.FechaCulmina);
    @Html.HiddenFor(v => v.AprobadoEncargado);
    @Html.HiddenFor(v => v.AprobadoSolicitado);
    @Html.HiddenFor(v => v.TareaConcurrente);
    @Html.HiddenFor(v => v.IdUsuarioSolicitante, new { id = "IdUsuarioSolicitante" });
    @Html.HiddenFor(v => v.IdGrupo);
    @Html.HiddenFor(v => v.AsuntoTarea);
    @Html.HiddenFor(v => v.DescripcionTarea);

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="IdUsuarioSolicitante">tarea asignada a:*</label>
                    @Html.DevExpress().ComboBoxFor(q => q.IdUsuarioAsignado, settings =>
               {
                   settings.Name = "IdUsuarioAsignado";
                   settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                   settings.Properties.DisplayFormatString = "{0}";
                   settings.Properties.Columns.Add("Nombre", "Usuario").Width = System.Web.UI.WebControls.Unit.Percentage(10);
                   //Campo ID
                   settings.Properties.ValueField = "IdUsuario";
                   settings.Properties.ValueType = typeof(string);
                   settings.Properties.TextField = "Nombre";
                   //Boton para seleccionar ningun registro
                   settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Never;
                   settings.Properties.NullText = "== Seleccione ==";
                   settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                   settings.Properties.ClientSideEvents.SelectedIndexChanged = "function(s,e){mostrar_detalle();}";
                   settings.ReadOnly = true;
               }).BindList(ViewBag.list_usuarios).GetHtml()
                    @Html.ValidationMessageFor(q => q.IdUsuarioAsignado, "", new { @class = "text-danger" })
                </div>
            </div>


        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-2">
                <div class="form-group">
                    <label for="FechaInicio">Fecha de entrega*</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        @Html.DevExpress().DateEditFor(q => q.FechaInicio, settings =>
                   {
                       settings.Name = "FechaInicio";
                       settings.Properties.UseMaskBehavior = true;
                       settings.Properties.EditFormat = EditFormat.Date;
                       settings.Properties.EditFormatString = "dd/MM/yyyy";
                       settings.Properties.TimeSectionProperties.TimeEditProperties.EditFormat = EditFormat.Date;
                       settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                   }).GetHtml()
                        @Html.ValidationMessageFor(q => q.FechaInicio, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            
            <div class="col-md-2">
                <div class="form-group">
                    <label for="IdCtaCblePadre">Prioridad de la tarea*</label>
                    @Html.DevExpress().ComboBoxFor(q => q.IdEstadoPrioridad, settings =>
               {
                   settings.Name = "IdEstadoPrioridad";
                   settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                   settings.Properties.DisplayFormatString = "{0}";
                   settings.Properties.Columns.Add("Descripcion", "Estado").Width = System.Web.UI.WebControls.Unit.Percentage(10);
                   //Campo ID
                   settings.Properties.ValueField = "IdEstado";
                   settings.Properties.ValueType = typeof(int);
                   settings.Properties.TextField = "Descripcion";
                   //Boton para seleccionar ningun registro
                   settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Never;
                   settings.Properties.NullText = "== Seleccione ==";
                   settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                   settings.ReadOnly = true;

               }).BindList(ViewBag.list_prioridad).GetHtml()
                    @Html.ValidationMessageFor(q => q.IdEstadoPrioridad, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label for="AprobadoSolicitado"></label>
                    @Html.DevExpress().CheckBoxFor(q => q.AprobadoSolicitado, settings =>
               {
                   settings.Name = "AprobadoSolicitado";
                   settings.Text = "Aprobado solicitante";
                   settings.ReadOnly = true;
               }).GetHtml()
                    @Html.ValidationMessageFor(q => q.IdEstadoPrioridad, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label for="AprobadoSolicitado"></label>
                    @Html.DevExpress().CheckBoxFor(q => q.AprobadoEncargado, settings =>
               {
                   settings.Name = "AprobadoEncargado";
                   settings.Text = "Aprobado encargado";
                   settings.ReadOnly = true;

               }).GetHtml()
                    @Html.ValidationMessageFor(q => q.IdEstadoPrioridad, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label for="TareaConcurrente"></label>
                    @Html.DevExpress().CheckBoxFor(q => q.TareaConcurrente, settings =>
               {
                   settings.Name = "TareaConcurrente";
                   settings.Text = "Tarea recurrente";
                   settings.Properties.ClientSideEvents.ValueChanged = "function(s,e){mostrar_parametros()}";
                   settings.ReadOnly = true;

               }).GetHtml()
                    @Html.ValidationMessageFor(q => q.IdEstadoPrioridad, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="AsuntoTarea">Asunto*</label>
                    @Html.TextAreaFor(v => v.AsuntoTarea, new { @class = "form-control", @rows = 2, @disabled = "disabled" })
                    @Html.ValidationMessageFor(m => m.AsuntoTarea, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="DescripcionTarea">Detalle*</label>
                    @Html.TextAreaFor(v => v.DescripcionTarea, new { @class = "form-control", @rows = 4, @disabled = "disabled" })
                    @Html.ValidationMessageFor(m => m.DescripcionTarea, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="DescripcionTarea">Observaciones*</label>
                    @Html.TextAreaFor(v => v.ObsevacionModificacion, new { @class = "form-control", @rows = 4 })
                    @Html.ValidationMessageFor(m => m.ObsevacionModificacion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div id="Tabs" role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
            <li class="active">
                <a href="#tab_detalle" aria-controls="informacion_items" role="tab" data-toggle="tab">Detalle tarea</a>
            </li>
            <li>
                <a href="#tab_historico" aria-controls="parametros" role="tab" data-toggle="tab" id="link_historico">Histórico</a>
            </li>


        </ul>
        <div class="tab-content" style="padding-top: 20px">
            <div role="tabpanel" class="" style="margin-left: 1em;" id="tab_detalle">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Action("GridViewPartial_tarea_det", "Tarea")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" style="margin-left: 1em;" id="tab_historico">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Action("GridViewPartial_tarea_det_estados", "TareaEstados", new { IdTarea = Model.IdTarea })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>





    <div class="box-footer">
        <button type="submit" class="btn btn-primary"btbAprobar">Guardar</button>
        <a class="btn btn-default" href="@Url.Action("Index","AsignarTarea",new { Area = "General" },null)">Cancelar</a>
    </div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}

